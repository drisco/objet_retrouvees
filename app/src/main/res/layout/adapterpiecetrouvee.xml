<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_marginTop="5dp"
android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:backgroundTint="#B08DC9EF"
    android:layout_marginStart="5dp"
    android:elevation="10dp"
    android:layout_marginEnd="5dp"
    android:background="@drawable/input_border">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="16dp">
        <ProgressBar
            android:id="@+id/bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:layout_gravity="center"
            android:visibility="visible"
            android:elevation="5dp"
            android:progressTint="@color/black"/>

        <ImageView
            android:id="@+id/imageViewPhoto1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:background="@drawable/fontr"
            android:scaleType="centerCrop"
            android:src="@drawable/_person" />
    </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:padding="8dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textViewTitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Titre de l'élément"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:fontFamily="@font/gotham_medium"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/descr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Titre de l'élément"
            android:layout_below="@+id/textViewTitle1"
            android:textSize="18sp"
            android:fontFamily="@font/arial" />
        <View
            android:id="@+id/view"
            android:layout_below="@+id/descr"
            android:layout_height="1dp"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:background="#000000" />
        <TextView
            android:id="@+id/call1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:text="Appeler"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/costum_border_pays"
            android:fontFamily="@font/montserrat_bold"
            android:backgroundTint="@color/green"
            android:padding="10dp"
            android:layout_alignParentEnd="true"
            />
        <!-- Nom -->
        <LinearLayout
            android:id="@+id/lle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/call1"
            android:orientation="horizontal">

            <!-- Emplacement -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sauveur :"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Date -->
            <TextView
                android:id="@+id/textViewName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/gotham_medium"
                android:text="John doe"
                android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/lle"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/call1"
            android:orientation="horizontal">

            <!-- Emplacement -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Numero :"
                android:textColor="#2196F3"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Date -->
            <TextView
                android:id="@+id/textViewNumber1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/gotham_medium"
                android:text="0505022366"
                android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lle3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/lle2"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/call1"
            android:orientation="horizontal">

            <!-- Emplacement -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ville :"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Date -->
            <TextView
                android:id="@+id/textViewCity1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/gotham_medium"
                android:text="Abidjan Abobo"
                android:textSize="16sp" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/lle3"
            android:layout_marginEnd="10dp">

            <!-- Emplacement -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@+id/textViewDate1"
                android:text="Date :"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Date -->
            <TextView
                android:id="@+id/textViewDate1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20/08/2023"
                android:textSize="16sp"
                android:fontFamily="@font/gotham_medium"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>

</LinearLayout>

